{
    "manifest_version": 3,
    "name": "SurfHound",
    "version": "1.0",
    "description": "Browser extension for phishing detection using machine learning",
  
    "background": {
      "service_worker": "background.js"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
  
    "permissions": [
      "tabs",
      "webNavigation",
      "webRequest",
      "storage",
      "activeTab"
    ],

    "host_permissions": [
      "http://localhost/*"
    ],
  
    "action": {
      "default_popup": "popup.html"
    }

  }
  